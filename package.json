{
  "name": "wepilot",
  "version": "0.1.0",
  "description": "A Chrome extension that provides AI-powered web page interaction similar to Copilot",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run build:dev",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:chrome": "bash scripts/build.sh chrome",
    "build:edge": "bash scripts/build.sh edge",
    "build:brave": "bash scripts/build.sh brave",
    "build:all": "bash scripts/build.sh",
    "package": "bash scripts/build.sh",
    "package:chrome": "bash scripts/build.sh chrome",
    "package:edge": "bash scripts/build.sh edge",
    "package:brave": "bash scripts/build.sh brave",
    "package:all": "bash scripts/build.sh",
    "watch": "webpack --mode development --watch",
    "dev": "npm run watch"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "copilot",
    "web-automation",
    "browser-extension"
  ],
  "author": "Wepilot Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.11.19",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.8.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "archiver": "^6.0.1"
  },
  "dependencies": {
    "marked": "^12.0.0"
  }
